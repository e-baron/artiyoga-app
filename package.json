{
  "name": "jam-site",
  "version": "0.1.0",
  "private": false,
  "main": "dist-electron/main/main.js",
  "scripts": {
    "next:dev": "next dev -p 3001",
    "watch:main": "tsc -p tsconfig.main.json -w",
    "dev": "concurrently -k -r -n NEXT,MAIN,ELECTRON \"npm:next:dev\" \"npm:watch:main\" \"wait-on tcp:3001 && electron .\"",
    "build:wrapper": "tsc -p tsconfig.main.json",
    "build:next": "next build",
    "build:next:export": "NEXT_PUBLIC_NODE_ENV=production next build",
    "build:next:standalone": "USE_PROD=1 FORCE_DEV=1 next build && node src/utils/prepare-standalone.ts",
    "dist": "npm run build:next && npm run build:wrapper && electron-builder",
    "start": "USE_PROD=1 electron ."  },
  "build": {
    "appId": "be.e-baron.jamsite",
    "productName": "JamSite",
    "asar": false,
    "files": [
      "dist-electron/main/**",
      ".next/**",
      ".contentlayer/**",
      "public/**",
      "node_modules/**",
      "package.json",
      "src/**",
      ".git/**",
      ".gitignore",
      "tsconfig.json",
      "next.config.ts",
      "next.config.export.ts",
      "CNAME",
      ".nojekyll",
      "next-env.d.ts",
      "README.md",
      "eslint.config.mjs",
      "tsconfig.main.json",
      "tsconfig.scripts.json",
      "contentlayer.config.ts",
      ".github/**",
      ".vscode/**",
      "main/**"
    ],
    "afterPack": "./src/utils/packaging-git.ts",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ]
    }
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.3.4",
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fontsource/roboto": "^5.2.6",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.1",
    "@mui/icons-material": "^7.1.2",
    "@mui/material": "^7.1.2",
    "@mui/material-nextjs": "^7.1.1",
    "@next/mdx": "^15.3.4",
    "@types/lodash": "^4.17.19",
    "@types/mdx": "^2.0.13",
    "@types/plantuml-encoder": "^1.4.2",
    "@uiw/react-codemirror": "^4.25.2",
    "contentlayer2": "^0.5.8",
    "date-fns": "^4.1.0",
    "fs-extra": "^11.3.2",
    "gh-pages": "^6.3.0",
    "isomorphic-git": "^1.33.2",
    "loadash": "^1.0.0",
    "lodash": "^4.17.21",
    "material-symbols": "^0.35.0",
    "mime-types": "^3.0.1",
    "next": "^15.5.3",
    "next-contentlayer2": "^0.5.8",
    "plantuml-encoder": "^1.4.0",
    "prism-react-renderer": "^2.4.1",
    "prism-themes": "^1.9.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-responsive-carousel": "^3.2.23",
    "rehype-prism-plus": "^2.0.1",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "simple-git": "^3.28.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@electron/remote": "^2.1.3",
    "@eslint/eslintrc": "^3",
    "@types/electron": "^1.4.38",
    "@types/fs-extra": "^11.0.4",
    "@types/gh-pages": "^6.1.0",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^32.3.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "^15.5.3",
    "wait-on": "^9.0.1"
  }
}
